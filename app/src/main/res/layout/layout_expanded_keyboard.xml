    <!-- QWERTY Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="11">
        
        <Button style="@style/Widget.Zelland.Button.Keyboard" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="â‡§" android:tag="Shift" android:id="@+id/btnShift" />
        <Button style="@style/Widget.Zelland.Button.Keyboard" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="z" android:tag="z" />
