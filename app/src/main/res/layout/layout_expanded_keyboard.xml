        <Button style="@style/Widget.Zelland.Button.Keyboard" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="m" android:tag="m" />
        <Button style="@style/Widget.Zelland.Button.Keyboard" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="," android:tag="," />
        <Button style="@style/Widget.Zelland.Button.Keyboard" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="." android:tag="." />
        <Button style="@style/Widget.Zelland.Button.Keyboard" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="/" android:tag="/" />
