        <Button style="@style/Widget.Zelland.Button.Keyboard" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="p" android:tag="p" />
    </LinearLayout>

    <!-- QWERTY Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        
        <Button style="@style/Widget.Zelland.Button.Keyboard" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="ESC" android:tag="Escape" android:textSize="10sp" />
        <Button style="@style/Widget.Zelland.Button.Keyboard" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="a" android:tag="a" />
