        <Button style="@style/Widget.Zelland.Button.Keyboard" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="e" android:tag="e" />
        <Button style="@style/Widget.Zelland.Button.Keyboard" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="r" android:tag="r" />
        <Button style="@style/Widget.Zelland.Button.Keyboard" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="t" android:tag="t" />
